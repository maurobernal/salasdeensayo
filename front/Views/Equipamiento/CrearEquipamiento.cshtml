@{
    string error = ViewData["error"] as string;
    string required = ViewData["required"] as string;
}
<div class="container">
    @using (Html.BeginForm("GuardarEquipamiento", "Equipamiento", FormMethod.Post))
    {
        <div class="row">
            <div class="col-3">
                <label>Sala de Ensayo:</label>
            </div>
            <div class="col-5">
                @(Html.Kendo().DropDownList()
                    .Name("lbx_salasdeensayo")
                    .AutoBind(true).Filter(FilterType.Contains)
                    .SelectedIndex(0)
                    .OptionLabel("Seleccione")
                    .DataSource(d => d.Read("GetList", "Salas"))
                    .DataTextField("Descripcion")
                    .DataValueField("Id")
                    )
            </div>
        </div>
        <div class="row">
            <div class="col-3">
                <label>Instrumento:</label>
            </div>
            <div class="col-5">
                @(Html.Kendo().DropDownList()
                    .Name("lbx_instrumento")
                    .AutoBind(true).Filter(FilterType.Contains)
                    .SelectedIndex(0)
                    .OptionLabel("Seleccione")
                    .DataSource(d => d.Read("GetList", "Instrumento"))
                    .DataTextField("Descripcion")
                    .DataValueField("Id")
                    )
            </div>
        </div>
        <div class="row text-center p-2">
            <div class="col-5">
                @(Html.Kendo().Button().Name("btn_submit")
                    .Content("Crear")
                    .Icon("plus")
                    )
            </div>
        </div>
        @if (error != null)
        {
            <span class="text-danger">
                @error
            </span>
        }
        @if (required != null)
        {
            <span class="text-danger">
                @required
            </span>
        }
    }
</div>
